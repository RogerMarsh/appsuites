# './RunLinters ^' or './RunLinters \*' will run 'pylint --ignore tests',
# pycodestyle, pydocstyle, and 'black --check', on all project directories
# in the current working directory.
# './RunLinters chesstab' will run the four programs on the chesstab project
# directory in the current working directory.
# './RunLinters chesstab black' will run 'black --check' on the chesstab
# project directory in the current working directory.
export projects='chesscalc
                 chessql
                 chessresults
                 chesssubmit
                 chesstab
                 chesstabular
                 chessvalidate
                 ecfformat
                 emailextract
                 emailstore
                 pgn_read
                 solentware_base
                 solentware_grid
                 solentware_misc
                 uci_net'
for environment in _runlinters;
do
    mkdir $environment;
    for project in $projects;
    do
        ln -s $PWD/$project/$project $environment;
    done
    export PYTHONPATH=$PWD/$environment;
    for project in $projects;
    do
        if test "$1" == $project -o "$1" == \* -o "$1" == ^; then
            echo "Run linters on $project"
            if test "$2" == "pylint" -o "$2" == ""; then
                echo "pylint"
                pylint --disable=similarities --reports=y --ignore tests $project/$project
            fi
            if test "$2" == "pycodestyle" -o "$2" == ""; then
                echo "pycodestyle"
                pycodestyle $project
            fi
            if test "$2" == "pydocstyle" -o "$2" == ""; then
                echo "pydocstyle"
                pydocstyle $project
            fi
            if test "$2" == "black" -o "$2" == ""; then
                echo "black --check"
                black --check $project
            fi
        fi
    done
    rm -r $environment
done
